<!-- views/edit-user.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Edit User</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
  </head>
  <body>
    <div class="container mx-auto p-8">
      <h1 class="text-3xl font-bold mb-4 text-center">Edit User</h1>

      <form
        action="/users/update/<%= user.id %>"
        method="POST"
        class="max-w-sm mx-auto"
      >
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-bold mb-2"
            >Name:</label
          >
          <input
            disabled
            type="text"
            id="name"
            name="name"
            value="<%= user['Biodatum.name'] %>"
            class="border border-gray-300 rounded-md px-4 py-2 w-full"
            required
          />
        </div>

        <div class="mb-4">
          <label for="username" class="block text-gray-700 font-bold mb-2"
            >Username:</label
          >
          <input
            disabled
            type="text"
            id="username"
            name="username"
            value="<%= user.username %>"
            class="border border-gray-300 rounded-md px-4 py-2 w-full"
            required
          />
        </div>

        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-bold mb-2"
            >Email:</label
          >
          <input
            disabled
            type="email"
            id="email"
            name="email"
            value="<%= user['Biodatum.email'] %>"
            class="border border-gray-300 rounded-md px-4 py-2 w-full"
            required
          />
        </div>

        <div class="mb-4">
          <label for="password" class="block text-gray-700 font-bold mb-2"
            >Password:</label
          >
          <input
            disabled
            type="password"
            id="password"
            name="password"
            placeholder="Enter new password"
            value="<%= user.password %>"
            class="border border-gray-300 rounded-md px-4 py-2 w-full"
          />
        </div>

        <div class="flex justify-center">
          <a
            href="/user/dashboard"
            class="bg-gray-500 hover:bg-gray-700 text-white px-4 py-2 rounded"
            >Back
          </a>
        </div>
      </form>
    </div>
  </body>
</html>
